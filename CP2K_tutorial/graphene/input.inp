&GLOBAL
  PROJECT momo
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      &CENTER_COORDINATES
      &END
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME mo.xyz
    &END TOPOLOGY
    &KIND Mo
      BASIS_SET DZVP-MOLOPT-SR-GTH-q14
      POTENTIAL GTH-PBE-q14 
    &END KIND
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/GTH_POTENTIALS 
    LSD
    MULTIPLICITY 1
    CHARGE 0
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &MGRID
      CUTOFF 850
      NGRIDS 5
      REL_CUTOFF 65
    &END MGRID
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-05
      MAX_SCF 200
      &DIAGONALIZATION T
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING T
        ALPHA 0.5
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
           &PAIR_POTENTIAL
             TYPE DFTD3
             PARAMETER_FILE_NAME  /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/dftd3.dat
             REFERENCE_FUNCTIONAL PBE
           &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT
&END FORCE_EVAL
&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    1.0E-04
    MAX_FORCE 1.0E-04
    RMS_DR    1.0E-04
    RMS_FORCE 1.0E-04
    MAX_ITER 200
    OPTIMIZER CG
    &CG
      MAX_STEEP_STEPS  0
      RESTART_LIMIT 9.0E-01
    &END CG
  &END GEO_OPT
&END MOTION
