&GLOBAL
  PROJECT BENZENE-UNPERTURBED
  RUN_TYPE ENERGY
  PRINT_LEVEL low
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &KIND H1
     ELEMENT H
     &BASIS                                ! Basis set for H
     1
     1 0 0 3 1
     0.3425250914E+01       0.1543289673E+00
     0.6239137298E+00       0.5353281423E+00
     0.1688554040E+00       0.4446345422E+00
     &END
     POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q5
    &END KIND
    &CELL
      ABC 30.0 30.0 30.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME ben.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS

  #&PROPERTIES
  #  &TDDFPT
  #     NSTATES      5
  #     MAX_ITER    100
  #     CONVERGENCE [eV] 1.0e-6
  #     RKS_TRIPLETS .FALSE.
  #     &PRINT
  #	&ITERATION_INFO HIGH
  #    	   FILENAME ./iter.dat
  #   	&END ITERATION_INFO
  #     &END PRINT
  #  &END TDDFPT
  #&END PROPERTIES

  &DFT
    BASIS_SET_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/BASIS_SET
    POTENTIAL_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/POTENTIAL
    #WFN_RESTART_FILE_NAME BENZENE-UNPERTURBED-RESTART.wfn
    CHARGE 0
    LSD
    #ROKS
    MULTIPLICITY 2
    &QS
      EPS_DEFAULT 1.0E-7
    &END QS
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER wavelet
      &WAVELET
        SCF_TYPE 100
      &END WAVELET
    &END POISSON
    &MGRID
      CUTOFF 750
      NGRIDS 6
    &END MGRID
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-8
      MAX_SCF 100
      ADDED_MOS 200
      #CHOLESKY REDUCE
      #&SMEAR ON
      #  METHOD FERMI_DIRAC
      #  ELECTRONIC_TEMPERATURE [K] 1000
      # &END SMEAR
      &DIAGONALIZATION T
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &OUTER_SCF
        EPS_SCF 1.0E-6
	OPTIMIZER SD
 	MAX_SCF 100
      &END OUTER_SCF
      #&MIXING
      #  METHOD PULAY_MIXING
      # 	ALPHA 0.2
      # 	NBUFFER 5
      #&END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

